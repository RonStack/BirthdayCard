<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/developer"
        android:scaleType="centerCrop"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Congratulations!"
        android:textSize="26sp"
        android:layout_alignParentLeft="true"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/holo_blue_dark"
        android:id="@+id/congrats"
        android:padding="6dp"
        android:textStyle="bold"
        android:textAllCaps="true"
    />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Great work on completing your first assignment!"
        android:textSize="18sp"
        android:layout_alignParentLeft="true"
        android:fontFamily="sans-serif-light"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_dark"
        android:paddingTop="70dp"
        android:paddingLeft="40dp"
        android:textStyle="bold"
        android:layout_below="@id/congrats"
        android:id="@+id/message"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-Yours Truly,"
        android:layout_below="@+id/message"
        android:layout_marginLeft="120dp"
        android:fontFamily="sans-serif-light"
        android:textAllCaps="true"
        android:textStyle="italic"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:padding="0dp"
        android:id="@+id/yoursTruly"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ronny"
        android:layout_below="@+id/yoursTruly"
        android:layout_marginLeft="160dp"
        android:fontFamily="sans-serif-light"
        android:textAllCaps="true"
        android:textStyle="italic"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:padding="0dp"
        />
    
</RelativeLayout>
